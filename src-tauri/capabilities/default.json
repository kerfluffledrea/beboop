{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-exists",
    "dialog:default",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$HOME"
        },
        {
          "path": "$HOME/**"
        }
      ]
    }
  ]
}